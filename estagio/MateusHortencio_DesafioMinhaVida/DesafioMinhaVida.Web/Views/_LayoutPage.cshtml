<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/Content/plugin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugin/css/grayscale.css" rel="stylesheet" />
    <link href="~/Content/plugin/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    
    <title>Guitarrinha do Chimbinha - @ViewBag.Title</title>
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <h2 class="pull-left">GDC</h2>
        <ul class="nav nav-tabs pull-left">
            <li role="presentation">@Html.ActionLink("Home", "Index")</li>
            <li role="presentation">@Html.ActionLink("Cadastrar Guitarra", "Cadastrar", "Guitarras")</li>
            <li role="presentation">@Html.ActionLink("Lista de Guitarras", "Listar", "Guitarras")</li>
            <li role="presentation"></li>
        </ul>
    </nav>
    <div class="intro">
        <div class="container content-section" style="padding-top: 150px;">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container text-center">
            <p>Copyright &copy; Guitarrinhas do Capeta por Mateus Hortêncio dos Santos - @DateTime.Now.Year</p>
        </div>
    </footer>
    <script src="~/Content/plugin/js/jquery.js"></script>
    <script src="~/Content/plugin/js/bootstrap.min.js"></script>
    <script src="~/Content/plugin/js/grayscale.js"></script>
</body>
</html>
